<%- include("partials/header.ejs") %>

    <body>
        <div class="app_container">
            <h1>MQTT Web Subscriber </br> And Publisher
                üõ∞Ô∏è‚ú®
            </h1>

            <h3>Log to the MQTT</h3>
            <div class="main-form">
                <div>
                    <form action="/connect" method="POST" class="mqtt-connector">
                        <input id="host" type="text" name="host" placeholder="Broker Address" value="" /required>
                        <input id="port" type="text" name="port" placeholder="Port" value="8884"><br />
                        <input id="username" type="text" name="username" placeholder="Username" value="" /required>
                        <input id="password" type="password" name="password" placeholder="Password" value="" /required>

                        <input id="connect" class="button" type="submit" value="Connect" name="brokerConnection" />
                    </form>
                </div>
                <div class="mqtt-disconnect">
                    <form action="/disconnect" method="POST">
                        <!-- Disconnect form fields -->
                        <input id="disconnect" class="button" type="submit" value="Disconnect"
                            name="brokerConnection" />
                    </form>
                </div>
            </div>




            <% if ( locals.connectionStatus) { %>
                <h4>Status: <span id="status_connected">
                        <%= connectionStatus %>
                    </span></h4>
                <% } else { %>
                    <h4>Status: <span id="status">Disconnected</span></h4>
                    <% }%>

                        <hr>

                        <h3>Subscription topic</h3>
                        <form class="mqtt-connector">
                            <input id="topic-subscriber" type="text" name="topic-subscriber"
                                placeholder="Subscribed Topic" value="">

                            <input id="subscribe" class="button" type="submit" value="Subscribe" />

                            <span id="emoji-decor">üë©‚Äçüî¨üì°ü™ê</span>
                        </form>

                        <h3>Publish Topic and Message:</h3>
                        <form class="mqtt-connector">
                            <input id="topic-publisher" type="text" name="topic-publisher" placeholder="Topic">
                            <input id="message-publisher" type="text" name="message-publisher" placeholder="Message">

                            <input id="publish" type="submit" class="button" value="Publish">
                        </form>

                        <div id="message-mqtt">
                        </div>
