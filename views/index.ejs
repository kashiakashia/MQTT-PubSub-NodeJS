<%- include("partials/header.ejs") %>

    <body>
        <div class="app_container">
            <h1>MQTT Web Subscriber </br> And Publisher
                üõ∞Ô∏è‚ú®
            </h1>

            <h3>Log to the MQTT</h3>
            <div class="main-form">
                <div>
                    <form action="/connect" method="POST" class="mqtt-connector">
                        <input id="host" type="text" name="host" placeholder="Broker Address" value="" /required>
                        <input id="port" type="text" name="port" placeholder="Port" value="8884"><br />
                        <input id="username" type="text" name="username" placeholder="Username" value="" /required>
                        <input id="password" type="password" name="password" placeholder="Password" value="" /required>

                        <input id="connect" class="button" type="submit" value="Connect" name="brokerConnection" />
                    </form>
                </div>
            </div>

            <% if ( locals.connectionStatus) { %>
                <h4>Status: <span id="status_connected">
                        <%= connectionStatus %>
                    </span></h4>
                <% } else { %>
                    <h4>Status: <span id="status">Disconnected</span></h4>
                    <% }%>

                        <hr>
    </body>

    </html>